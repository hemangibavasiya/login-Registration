style.
    table {
    margin: auto;
    width: 50%;
    border: 3px solid green;
    padding: 10px;
    }
    input {
        width: 50%;
        border: 1px solid green;
    }
    input[type=submit] {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
    input[type=text], input[type=password], input[type=email] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
    }
    .password-field {
        display: inline-block;

        &:after {
            content: '';
            display: block;
            height: 3px;
            width: 0;
            margin-top: 3px;
        }

        &.level0:after {
            width: 25%;
            background: red;
        }

        &.level1:after {
            width: 50%;
            background: orange;
        }

        &.level2:after {
            width: 75%;
            background: gold;
        }

        &.level3:after {
            width: 100%;
            background: green;
        }
    }